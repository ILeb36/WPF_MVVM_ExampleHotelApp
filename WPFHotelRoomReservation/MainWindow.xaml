<Window x:Class="WPFHotelRoomReservation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFHotelRoomReservation"
        xmlns:views="clr-namespace:WPFHotelRoomReservation.Views"
        xmlns:viewModels="clr-namespace:WPFHotelRoomReservation.ViewModels"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="MainWindow" Height="450" Width="auto" FontSize="14">
    
    <Grid Margin="25, 10">
        <Grid.Resources>
            <!-- Data context is set automatically according to value type in Content-->
            <DataTemplate DataType="{x:Type viewModels:ReserveRoomViewModel}">
                <views:ReserveRoomView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:ListOfReservationsViewModel}">
                <views:ListOfReservationsView/>
            </DataTemplate>
        </Grid.Resources>
        
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
