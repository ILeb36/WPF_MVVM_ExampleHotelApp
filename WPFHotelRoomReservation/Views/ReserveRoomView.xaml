<UserControl x:Class="WPFHotelRoomReservation.Views.ReserveRoomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFHotelRoomReservation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid Grid.IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Reserve Room" Grid.Row="0" Style="{StaticResource Header}"/>

        <Grid Grid.Row="1" Margin="0 10 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Content="Resident name:"/>
            <!-- change with dropdown -->
            <TextBox Grid.Row="1" Text="{Binding Resident, UpdateSourceTrigger=PropertyChanged}" Margin="0 5"/>
        </Grid>

        <Grid Grid.Row="2" Margin="0 10 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="SyncGroup1"/>
                <ColumnDefinition Width="auto" SharedSizeGroup="SyncGroup2"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Room #"/>
            <Label Grid.Row="0" Grid.Column="1" Content="Floor #" Margin="5 0 0 0"/>
            <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding RoomNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0 5 0 0"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding FloorNumber, UpdateSourceTrigger=PropertyChanged}" Margin="5 5 0 0"/>
        </Grid>

        <Grid Grid.Row="3" Margin="0 10 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" SharedSizeGroup="SyncGroup1"/>
                <ColumnDefinition Width="auto" SharedSizeGroup="SyncGroup2"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Starting Date" Margin="0 0 0 0"/>
            <Label Grid.Row="0" Grid.Column="1" Content="Ending Date" Margin="5 0 0 0"/>
            <DatePicker Grid.Row="1" Grid.Column="0" SelectedDate="{Binding StartingDate, UpdateSourceTrigger=PropertyChanged}" Margin="0 5 0 0"/>
            <DatePicker Grid.Row="1" Grid.Column="1" SelectedDate="{Binding EndingDate, UpdateSourceTrigger=PropertyChanged}" Margin="5 5 0 0"/>
        </Grid>
        <StackPanel Grid.Row="4" Margin="0 30 0 50" Width="auto" Orientation="Horizontal">
            <Button Content="Reserve" Margin="0 0 30 0" Command="{Binding ReserveCommand}"/>
            <Button Content="Cancel" Command="{Binding NavigationCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
